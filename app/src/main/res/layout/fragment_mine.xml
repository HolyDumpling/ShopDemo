                        </LinearLayout>
                    </GridLayout>
                </LinearLayout>
            </LinearLayout>
        </com.hd.shopdemo.widget.JudgeNestedScrollView>
    </com.scwang.smart.refresh.layout.SmartRefreshLayout>

    <include layout="@layout/nav_title" />
